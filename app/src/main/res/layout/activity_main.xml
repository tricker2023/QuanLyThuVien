<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background"
    tools:context=".MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <!--        Code tạo image view logo FBU-->
        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="161dp"
            android:layout_height="140dp"
            android:background="#00000000"
            app:srcCompat="@drawable/fbulogo" />
        <!--        Code tạo text view tên trường-->
        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:textSize="@dimen/regular2"
            android:fontFamily="@font/opensans_bold"
            android:text="TRƯỜNG ĐẠI HỌC TÀI CHÍNH NGÂN HÀNG HÀ NỘI" />
    </LinearLayout>

    <Button
        android:id="@+id/main_managementBookCataloging"
        android:layout_marginTop="@dimen/regular1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Quản lí biên mục sách"
        android:textSize="@dimen/regular1"
        android:paddingVertical="@dimen/regular1"
        android:fontFamily="@font/opensans_bold"/>
    <Button
        android:id="@+id/main_managementBookSummary"
        android:layout_marginTop="@dimen/regular1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Quản lí toán tắt sách"
        android:textSize="@dimen/regular1"
        android:paddingVertical="@dimen/regular1"
        android:fontFamily="@font/opensans_bold"/>
    <Button
        android:id="@+id/main_managementBooks"
        android:layout_marginTop="@dimen/regular1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Quản lí sách"
        android:textSize="@dimen/regular1"
        android:paddingVertical="@dimen/regular1"
        android:fontFamily="@font/opensans_bold"/>
    <Button
        android:id="@+id/btnxemThongtin"
        android:layout_width="221dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/regular1"
        android:background="@drawable/custom_button"
        android:hint="Xem thông tin sách"
        android:textColorHint="@color/text2"
        android:textSize="@dimen/regular2"
        app:backgroundTint="@null" />

    <Button
        android:id="@+id/btndangkyms"
        android:layout_width="221dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/regular1"
        android:background="@drawable/custom_button"
        android:hint="Đăng ký mượn sách"
        android:textColorHint="@color/text2"
        android:textSize="@dimen/regular2"
        app:backgroundTint="@null" />

    <Button
        android:id="@+id/btntrasach"
        android:layout_width="221dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/regular1"
        android:background="@drawable/custom_button"
        android:hint="Trả sách"
        android:textColorHint="@color/text2"
        android:textSize="@dimen/regular2"
        app:backgroundTint="@null" />

    <Button
        android:id="@+id/btnthanhtoan"
        android:layout_width="221dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/regular1"
        android:background="@drawable/custom_button"
        android:hint="Thanh toán"
        android:textColorHint="@color/text2"
        android:textSize="@dimen/regular2"
        app:backgroundTint="@null" />

    <Button
        android:id="@+id/btnlogout"
        android:layout_width="221dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/regular1"
        android:background="@drawable/custom_button"
        android:hint="Đăng xuất"
        android:textColorHint="@color/text2"
        android:textSize="@dimen/regular2"
        app:backgroundTint="@null" />

</LinearLayout>