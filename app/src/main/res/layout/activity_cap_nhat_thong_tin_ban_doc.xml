<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background"
    tools:context=".CapNhatThongTinBanDocActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/regular3"
        android:textAlignment="center">

        <ImageButton
            android:id="@+id/btnback"
            android:layout_width="10dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#00000000"
            android:src="@drawable/chevron_left" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!--tạo form cập nhật thông tin bạn đọc-->
            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/opensans_bold"
                android:text="CẬP NHẬT THÔNG TIN BẠN ĐỌC"
                android:textAlignment="center"
                android:textColor="@color/text"
                android:textSize="20dp" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="@dimen/regular3" >
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/regular3"
            app:hintEnabled="false">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edtmabandoccn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/background_input"
                android:ems="10"
                android:hint="Mã bạn đọc"
                android:inputType="text"
                android:maxLength="10"
                android:textColorHint="@color/text"
                android:textSize="@dimen/regular2" />
        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/regular2"
            app:hintEnabled="false">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edthotencn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/background_input"
                android:ems="10"
                android:hint="Họ và tên"
                android:inputType="text"
                android:maxLength="50"
                android:textColorHint="@color/text"
                android:textSize="@dimen/regular2" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/regular2"
            app:hintEnabled="false">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edtlopcn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/background_input"
                android:ems="10"
                android:hint="Lớp hành chính"
                android:inputType="text"
                android:maxLength="12"
                android:textColorHint="@color/text"
                android:textSize="@dimen/regular2" />
        </com.google.android.material.textfield.TextInputLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/regular2"
                android:layout_weight="1"
                app:hintEnabled="false">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edtsdtcn"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/background_input"
                    android:ems="10"
                    android:hint="Số điện thoại"

                    android:inputType="number"
                    android:maxLength="11"
                    android:textColorHint="@color/text"
                    android:textSize="16dp" />


            </com.google.android.material.textfield.TextInputLayout>


        </LinearLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/regular2"
            app:hintEnabled="false">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edtdiachicn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/background_input"
                android:ems="10"
                android:hint="Địa chỉ"
                android:inputType="text"
                android:maxLength="50"
                android:textColorHint="@color/text"
                android:textSize="@dimen/regular2" />
        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/regular2"
            app:hintEnabled="false">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edtkhoaviencn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/background_input"
                android:ems="10"
                android:hint="Khoa/Viện"
                android:inputType="text"
                android:maxLength="20"
                android:textColorHint="@color/text"
                android:textSize="@dimen/regular2" />
        </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/regular3">

        <Button
            android:id="@+id/btncapnhatthongtinbd"
            android:layout_marginTop="16dp"
            android:layout_width="155dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Cập nhật"
            android:textSize="@dimen/regular1"
            android:paddingVertical="@dimen/regular3"
            android:fontFamily="@font/opensans_bold"/>


        <Button
            android:id="@+id/btnxoathongtinbd"
            android:layout_marginTop="16dp"
            android:layout_width="155dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="40dp"
            android:text="Xóa"
            android:textSize="@dimen/regular1"
            android:paddingVertical="@dimen/regular3"
            android:fontFamily="@font/opensans_bold"/>
    </LinearLayout>
</LinearLayout>
