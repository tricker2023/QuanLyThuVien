<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddBookSummary"
    android:background="@color/background"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/regular3">
        <ImageButton
            android:id="@+id/addBookSummary_back"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/chevron_left"
            android:contentDescription="@string/app_name"
            android:background="@color/background"/>
        <TextView
            android:id="@+id/addBookSummary_textHeading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Thêm tóm tắt sách"
            android:textSize="@dimen/title3"
            android:fontFamily="@font/opensans_bold"
            android:gravity="start"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/regular1">
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:hintEnabled="false"
            android:layout_marginTop="@dimen/regular1">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/addBookSummary_idBookSummary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/background_input"
                android:backgroundTint="@color/white"
                android:textColor="@color/text"
                android:ems="10"
                android:paddingHorizontal="@dimen/regular3"
                android:drawablePadding="@dimen/regular3"
                android:paddingVertical="@dimen/regular1"
                android:hint="Mã tóm tắt sách"
                android:fontFamily="@font/opensans"
                android:textColorHint="@color/text"
                android:inputType="text"
                android:textSize="@dimen/regular1"
                android:layout_marginTop="10dp"/>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:hintEnabled="false"
            android:layout_marginTop="@dimen/regular1">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/addBookSummary_mainContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/background_input"
                android:backgroundTint="@color/white"
                android:textColor="@color/text"
                android:ems="10"
                android:paddingHorizontal="@dimen/regular3"
                android:drawablePadding="@dimen/regular3"
                android:paddingVertical="@dimen/regular1"
                android:hint="Nội dung chính"
                android:fontFamily="@font/opensans"
                android:textColorHint="@color/text"
                android:inputType="text"
                android:textSize="@dimen/regular1"
                android:layout_marginTop="10dp"/>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:hintEnabled="false"
            android:layout_marginTop="@dimen/regular1">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/addBookSummary_meaning"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/background_input"
                android:backgroundTint="@color/white"
                android:textColor="@color/text"
                android:ems="10"
                android:paddingHorizontal="@dimen/regular3"
                android:drawablePadding="@dimen/regular3"
                android:paddingVertical="@dimen/regular1"
                android:hint="Ý nghĩa"
                android:fontFamily="@font/opensans"
                android:textColorHint="@color/text"
                android:inputType="text"
                android:textSize="@dimen/regular1"
                android:layout_marginTop="10dp"/>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:hintEnabled="false"
            android:layout_marginTop="@dimen/regular1">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/addBookSummary_communicationGoals"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/background_input"
                android:backgroundTint="@color/white"
                android:textColor="@color/text"
                android:ems="10"
                android:paddingHorizontal="@dimen/regular3"
                android:drawablePadding="@dimen/regular3"
                android:paddingVertical="@dimen/regular1"
                android:hint="Mục tiêu truyền đạt"
                android:fontFamily="@font/opensans"
                android:textColorHint="@color/text"
                android:inputType="text"
                android:textSize="@dimen/regular1"
                android:layout_marginTop="10dp"/>
        </com.google.android.material.textfield.TextInputLayout>
        <Button
            android:id="@+id/addBookSummary_saveData"
            android:layout_marginTop="@dimen/regular2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lưu"
            android:textSize="@dimen/regular1"
            android:paddingVertical="@dimen/regular1"
            android:fontFamily="@font/opensans_bold"/>
    </LinearLayout>
</LinearLayout>