                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="start"
                    android:text="TTS01"
                    android:textSize="@dimen/regular1"
                    android:fontFamily="@font/opensans_bold"
                    android:gravity="start"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/regular1">
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Mục tiêu truyền đạt :"
                    android:textSize="@dimen/regular1"
                    android:fontFamily="@font/opensans_bold"
                    android:gravity="start"/>
                <TextView
                    android:id="@+id/dialogSupBook_communicationGoals"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="start"
                    android:text="TTS01"
                    android:textSize="@dimen/regular1"
                    android:fontFamily="@font/opensans_bold"
                    android:gravity="start"/>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Thông tin sách"
                android:fontFamily="@font/opensans_bold"
                android:textSize="@dimen/title3"
                android:layout_marginTop="@dimen/regular1"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/regular1">
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Mã sách :"
                    android:textSize="@dimen/regular1"
                    android:fontFamily="@font/opensans_bold"
                    android:gravity="start"/>
                <TextView
                    android:id="@+id/dialogSupBook_idBooks"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:text="TTS01"
                    android:textSize="@dimen/regular1"
                    android:fontFamily="@font/opensans_bold"
                    android:gravity="start"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/regular1">
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Số trang :"
                    android:textSize="@dimen/regular1"
                    android:fontFamily="@font/opensans_bold"
                    android:gravity="start"/>
                <TextView
                    android:id="@+id/dialogSupBook_numberPage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="start"
                    android:text="TTS01"
                    android:textSize="@dimen/regular1"
                    android:fontFamily="@font/opensans_bold"
                    android:gravity="start"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/regular1">
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Giá thuê :"
                    android:textSize="@dimen/regular1"
                    android:fontFamily="@font/opensans_bold"
                    android:gravity="start"/>
                <TextView
                    android:id="@+id/dialogSupBook_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="start"
                    android:text="TTS01"
                    android:textSize="@dimen/regular1"
                    android:fontFamily="@font/opensans_bold"
                    android:gravity="start"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/regular1">
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Số lượng :"
                    android:textSize="@dimen/regular1"
                    android:fontFamily="@font/opensans_bold"
                    android:gravity="start"/>
                <TextView
                    android:id="@+id/dialogSupBook_numberBook"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="start"
                    android:text="TTS01"
                    android:textSize="@dimen/regular1"
                    android:fontFamily="@font/opensans_bold"
                    android:gravity="start"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/regular1">
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:text="Trạng thái :"
                    android:textSize="@dimen/regular1"
                    android:fontFamily="@font/opensans_bold"
                    android:gravity="start"/>
                <TextView
                    android:id="@+id/dialogSupBook_status"
                    android:layout_width="wrap_content"
                    android:layout_marginBottom="@dimen/title3"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="start"
                    android:text="TTS01"
                    android:textSize="@dimen/regular1"
                    android:fontFamily="@font/opensans_bold"
                    android:gravity="start"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>