<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/regular3">
        <ImageButton
            android:id="@+id/dialogSupSummary_back"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/chevron_left"
            android:contentDescription="@string/app_name"
            android:background="@color/background"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Chi tiết tóm tắt sách"
            android:textSize="@dimen/title3"
            android:fontFamily="@font/opensans_bold"
            android:gravity="start"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="@dimen/regular1"
        android:layout_marginTop="@dimen/regular1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Mã :"
                android:textSize="@dimen/regular1"
                android:fontFamily="@font/opensans_bold"
                android:gravity="start"/>
            <TextView
                android:id="@+id/dialogSupSummary_idBookSummary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:text="TTS01"
                android:textSize="@dimen/regular1"
                android:fontFamily="@font/opensans_bold"
                android:gravity="start"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/regular1">
            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Nội dung chính :"
                android:textSize="@dimen/regular1"
                android:fontFamily="@font/opensans_bold"
                android:gravity="start"/>
            <TextView
                android:id="@+id/dialogSupSummary_mainContent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="start"
                android:text="TTS01"
                android:textSize="@dimen/regular1"
                android:fontFamily="@font/opensans_bold"
                android:gravity="start"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/regular1">
            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Ý nghĩa :"
                android:textSize="@dimen/regular1"
                android:fontFamily="@font/opensans_bold"
                android:gravity="start"/>
            <TextView
                android:id="@+id/dialogSupSummary_meaning"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="start"
                android:text="TTS01"
                android:textSize="@dimen/regular1"
                android:fontFamily="@font/opensans_bold"
                android:gravity="start"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/regular1">
            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Mục tiêu truyền đạt :"
                android:textSize="@dimen/regular1"
                android:fontFamily="@font/opensans_bold"
                android:gravity="start"/>
            <TextView
                android:id="@+id/dialogSupSummary_communicationGoals"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="start"
                android:text="TTS01"
                android:textSize="@dimen/regular1"
                android:fontFamily="@font/opensans_bold"
                android:gravity="start"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>