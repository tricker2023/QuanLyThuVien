<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUp"
    android:background="@color/background"
    android:gravity="start"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/regular3">
        <ImageButton
            android:id="@+id/signUp_back"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/chevron_left"
            android:contentDescription="@string/app_name"
            android:background="@color/background"/>
        <TextView
            android:id="@+id/addDebt_textHeading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Quay lại"
            android:textSize="@dimen/title2"
            android:fontFamily="@font/opensans_bold"
            android:gravity="start"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingHorizontal="@dimen/regular2"
        android:layout_marginTop="50dp">
        <TextView
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Đăng kí"
            android:textColor="@color/text"
            android:textSize="@dimen/title2"
            android:fontFamily="@font/opensans_bold"/>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:hintEnabled="false"
            android:layout_marginTop="@dimen/regular1">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/signUp_user"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/background_input"
                android:backgroundTint="@color/white"
                android:textColor="@color/text"
                android:ems="10"
                android:drawableStart="@drawable/account_circle"
                android:drawablePadding="@dimen/regular3"
                android:hint="Tài khoản"
                android:fontFamily="@font/opensans"
                android:textColorHint="@color/text"
                android:inputType="text"
                android:textSize="@dimen/regular1"
                android:layout_marginTop="10dp"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:hintEnabled="false"
            app:passwordToggleEnabled="true"
            android:layout_marginTop="@dimen/regular1">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/signUp_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/background_input"
                android:backgroundTint="@color/white"
                android:textColor="@color/text"
                android:ems="10"
                android:paddingHorizontal="0dp"
                android:drawablePadding="@dimen/title3"
                android:paddingVertical="@dimen/regular3"
                android:drawableStart="@drawable/lock_open"
                android:hint="Mật khẩu"
                android:fontFamily="@font/opensans"
                android:textColorHint="@color/text"
                android:inputType="textPassword"
                android:textSize="@dimen/regular1"
                android:layout_marginTop="10dp"/>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:hintEnabled="false"
            app:passwordToggleEnabled="true"
            android:layout_marginTop="@dimen/regular1">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/signUp_ComfirmPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/background_input"
                android:backgroundTint="@color/white"
                android:textColor="@color/text"
                android:ems="10"
                android:paddingHorizontal="0dp"
                android:drawablePadding="@dimen/title3"
                android:paddingVertical="@dimen/regular3"
                android:drawableStart="@drawable/lock_open"
                android:hint="Xác nhận mật khẩu"
                android:fontFamily="@font/opensans"
                android:textColorHint="@color/text"
                android:inputType="textPassword"
                android:textSize="@dimen/regular1"
                android:layout_marginTop="10dp"/>
        </com.google.android.material.textfield.TextInputLayout>
        <Spinner
            android:id="@+id/signUp_spinnerPosition"
            android:layout_marginTop="@dimen/regular1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="5dp"
            android:contentDescription="@string/app_name"
            android:background="@drawable/background_input"
            android:backgroundTint="@color/white"/>

        <Button
            android:id="@+id/signUp_button"
            android:layout_marginTop="@dimen/regular2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Đăng kí"
            android:textSize="@dimen/regular1"
            android:paddingVertical="@dimen/regular3"
            android:fontFamily="@font/opensans_bold"/>

    </LinearLayout>

</LinearLayout>